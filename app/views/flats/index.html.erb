<div class="container">
  <h1>Our offer</h1>

  <div class="row">
  <% @flats.each do |flat| %>


  <div class="col-xs-12 col-sm-4">
    <div class="flat-card col-xs-12 col-sm-4"">
            <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <h4><%= flat.name %></h4>
              </div>
              <p><%= flat.address %></p>
              <div class="flex">
                <div class="flex">
                  <i class="material-icons mr-2"><%= flat.number_of_guests %></i><span>3</span>
                </div>
                <div class="flex ml-3">
                  <i class="material-icons mr-2"><%= flat.price_per_night %></i> 75
                </div>
              </div>
            </div>
            <div class="flat-card-actions">
              <a href="/flats/1251">More info</a>
              <a href="#" class="ml-3 text-warning">Edit</a>
              <a href="#" class="ml-3 text-danger">Remove</a>
            </div>
          </div>
</div>


  <% end %>
  </div>

</div>

